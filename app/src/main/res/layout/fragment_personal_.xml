<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
    <SearchView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/search_border"
        android:submitBackground="@drawable/search_border"
        android:queryBackground="@drawable/search_border"
        />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/filter_icon"
            android:layout_margin="10dp"
            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ INVITE"
            android:textColor="#023047"
            android:textStyle="bold"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aanchal Gupta"
            android:textColor="#023047"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi | Student"
            android:textColor="#023047"
            android:layout_marginLeft="70dp"

            />
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Within 300-400m"
            android:textColor="#023047"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="13dp"
                android:layout_marginLeft="70dp"
                android:indeterminate="false"
                android:progress="30"
                android:progressTint="#023047"
                android:progressBackgroundTint="#778da9"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee | Business | Friendship"
                android:textSize="15sp"
                android:textColor="#023047"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="9dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi Community! I am open to new connections"
                android:textSize="14sp"
                android:textColor="#023047"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="9dp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#778da9"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AG"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="#023047"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>
    </FrameLayout>




</LinearLayout>